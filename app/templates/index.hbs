{{render "components/index-menubar"}}
<section id="grab">
    <div class='darken'>
        <div class='fire'>
            {{#if codeGenerated}}
            <span>Thanks! We'll be in touch!</span>
            {{else}}
            <form class="form-inline" role="form" {{action 'fire' on='submit'}}>
                <div class="form-group">
                    <div class="input-group">
                        {{input value=email type='email' placeholder='Enter email' class='form-control'}}
                    </div>
                    <button type="submit" class="btn btn-default"><i class='fa fa-paper-plane'></i> Submit</button>
                </div>
            </form>
            {{/if}}
        </div>
    </div>
</section>